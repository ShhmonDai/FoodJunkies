<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fj.foodjunkies"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="27" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_GPS" />

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:hardwareAccelerated="false"
        android:icon="@drawable/mcd"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="fj.foodjunkies.LoginActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            android:screenOrientation="portrait"
        </activity>
        <activity
            android:name="fj.foodjunkies.Welcome"
            android:screenOrientation="portrait" />
        <activity
            android:name="fj.foodjunkies.quiz"
            android:screenOrientation="portrait" />
        <activity
            android:name="fj.foodjunkies.Recommend"
            android:screenOrientation="portrait" />
        <activity
            android:name="fj.foodjunkies.ChooseCuisine"
            android:screenOrientation="portrait" />
        <activity
            android:name="fj.foodjunkies.Constraints"
            android:screenOrientation="portrait" />
        <activity
            android:name="fj.foodjunkies.SelectRestaurant"
            android:screenOrientation="portrait" />
        <activity
            android:name="fj.foodjunkies.DisplayRestaurant"
            android:screenOrientation="portrait" />
        <activity
            android:name="fj.foodjunkies.RatePage"
            android:screenOrientation="portrait" />
        <activity
            android:name="fj.foodjunkies.RateQuestions"
            android:screenOrientation="portrait" />
        <activity
            android:name="fj.foodjunkies.CuisineQuiz"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="fj.foodjunkies.History"
            android:screenOrientation="portrait" />
        <activity
            android:name="fj.foodjunkies.Search"
            android:screenOrientation="portrait" />

        <provider
            android:name="com.android.tools.ir.server.InstantRunContentProvider"
            android:authorities="fj.foodjunkies.com.android.tools.ir.server.InstantRunContentProvider"
            android:multiprocess="true" />
    </application>

</manifest>